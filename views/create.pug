extends layout.pug 

block content 
    .head
        h1.header Add news
        .background
            if error
                p.error Some error occured! Try again!
            if invalidtitle 
                p.error Please, enter a valid title 
            if invalidname 
                p.error Please, enter a valid name 
            if invalidnews 
                p.error Please enter a valid information 
            if success  
                p.success Note is created!
        .container
            .wrapper
                .input-data
                    form(action="/create", method="POST" enctype="multipart/form-data")
                         
                        input.input1(type="text", name="title")
                        
                        label.label1 Title

                         
                        input.input2(type="text", name="name")
                        
                        label.label2 Username 

                         
                        input.input3(name="news")
                       
                        label.label3 Spit it out!
                        .img-container 
                            input(type="file" class="upload-box" name="image")
                        div.button-container
                            button.input Publish